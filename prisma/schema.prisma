// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Note: SQLite ne supporte pas les enums, on utilise String
// Les valeurs possibles sont documentées dans le code

model Profile {
  id         String      @id @default(cuid())
  firstName  String
  lastName   String
  birthDate  String
  birthPlace String?
  createdAt  DateTime    @default(now())

  numerology Numerology?
  reports    Report[]
  unlocks    Unlock[]
  eventLogs  EventLog[]

  @@map("profiles")
}

model Numerology {
  id          String   @id @default(cuid())
  profileId   String   @unique
  lifePath    Int
  expression  Int
  soulUrge    Int
  personality Int?
  createdAt   DateTime @default(now())

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("numerologies")
}

model Report {
  id         String   @id @default(cuid())
  profileId  String
  type       String   // ReportType: FREE, YEAR, MONTH, NEXT_12_MONTHS, LOVE, MOTHER, FATHER, WORK, MISSION, DEEP_PROFILE
  contentJson String  // JSON stocké comme String (SQLite ne supporte pas Json)
  createdAt  DateTime   @default(now())

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("reports")
}

model Unlock {
  id         String   @id @default(cuid())
  profileId  String
  moduleType String  // ModuleType: YEAR, MONTH, NEXT_12_MONTHS, LOVE, MOTHER, FATHER, WORK, MISSION, DEEP_PROFILE
  isUnlocked Boolean    @default(false)
  unlockedAt DateTime?

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("unlocks")
}

model EventLog {
  id        String   @id @default(cuid())
  profileId String?
  eventType String
  metadata  String?  // JSON stocké comme String (SQLite ne supporte pas Json)
  createdAt DateTime @default(now())

  @@index([eventType])
  @@index([createdAt])
  @@map("event_logs")
}
